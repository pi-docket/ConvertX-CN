# Stage 1: Build
FROM rust:1.75-bookworm AS builder

WORKDIR /app

# Copy Cargo files first for dependency caching
COPY Cargo.toml Cargo.lock* ./

# Create a dummy main.rs to build dependencies
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    cargo build --release && \
    rm -rf src

# Copy actual source code
COPY src ./src

# Build the actual application
RUN touch src/main.rs && cargo build --release

# Stage 2: Runtimeï¼ˆæ¥µç°¡ç‰ˆ - åªéœ€è¦ glibcï¼‰
FROM debian:bookworm-slim AS runtime

WORKDIR /app

# åªå®‰è£æœ€åŸºç¤çš„ä¾è³´
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy the compiled binary
COPY --from=builder /app/target/release/convertx-api /usr/local/bin/convertx-api

# Set environment variables
ENV RAS_API_PORT=7890
ENV CONVERTX_BACKEND_URL=http://convertx:3000

# Expose API port
EXPOSE 7890/tcp

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:7890/api/v1/health || exit 1

# Run the API server
ENTRYPOINT ["/usr/local/bin/convertx-api"]
